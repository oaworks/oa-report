permalink: "report-list/"
---

<div class="px-4 py-6 md:px-8 md:py-10 max-w-3xl mx-auto">
  <h1 class="text-xl md:text-3xl font-serif mb-6">Available OA.Reports</h1>
  <ul class="space-y-3">
    {% for org in orgs.hits.hits %}
      <li>
        <a href="{{ site.base_url }}/{{ org._source.objectID }}" class="underline underline-offset-4 decoration-1">
          {{ org._source.name }}
        </a>
        <span class="text-sm text-neutral-600">({{ org._source.objectID }})</span>
      </li>
    {% endfor %}
  </ul>
</div>
