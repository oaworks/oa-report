---
layout: layouts/base.njk
pagination:
    data: orgs.hits.hits
    size: 1
    alias: org
permalink: "{{ org._source.objectID | slug }}/"
---

{# crappy prototype #}
<script src="../js/prototype-table-data.js"></script>
