            count: '9999'
          })}}
          {{ component("pill", {
            id: "dataset_publisher",
            txt: "Dataset publishers",
            count: '9999'
          })}}
          {{ component("pill", {
            id: "software_publisher",
            txt: "Software publishers",
            count: '9999'
          })}}
        </div>
        
      </div>

      <div id="export_table">
        <h3 class="mb-12 text-3xl" aria-live="polite">
          Previewing first <strong id="export_records_shown">0</strong> of <strong id="export_title">0</strong> <span class="js_export_type">records</span> for <strong id="export_year">2023</strong>
          {{ component("tooltip", {
            msg: "This table is a preview of all the records for your query. To see the full data set in CSV format, use the <em>Download full data (CSV)</em> button."
          }) }} 
        </h3> 
        <div class="my-4 gap-6 grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 items-end">
          <form class="col-span-2 w-auto">
            <fieldset>
              <legend class="mb-3 text-xs font-semibold uppercase">Filter by</legend>
              <div class="flex flex-wrap items-center">
                {{ component("radio-filter", {
                  id: "all_articles",
                  txt: "All articles",
                  selected: true
                }) }}
                {{ component("radio-filter", {
                  id: "preprints",
                  txt: "Preprints"
                }) }}
                {{ component("radio-filter", {
                  id: "original_research_articles",
                  txt: "Peer-reviewed"
                }) }}
                {{ component("radio-filter", {
                  id: "articles_with_apcs",
                  txt: "With APCs"
                }) }}
                {{ component("radio-filter", {
                  id: "articles_covered_by_policy",
                  txt: "Covered by policy"
                }) }}
                {{ component("radio-filter", {
                  id: "funded_articles",
                  txt: "Funded"
                }) }}
                {{ component("radio-filter", {
                  id: "authored_articles",
                  txt: "Staff-authored"
                }) }}
              </div>
            </fieldset>
          </form>
          <div class="col-span-1"></div>
          <nav class="col-span-1 justify-self-end w-auto">            
            <div class="flex flex-col items-center">
