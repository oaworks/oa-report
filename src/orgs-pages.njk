        </h2>
      </header>

      {# TEMP CRAPPY NON-A11Y PROTOTYPING MARKUP #}
      <div class="mb-4 flex flex-wrap space-r-4 items-center" id="export_options">
        {{ component("pill", {
          id: "all_articles",
          txt: "Articles",
          count: '2,702'
        })}}
        {{ component("pill", {
          id: "grant",
          txt: "Grants",
          count: '848'
        })}}
        {{ component("pill", {
          id: "publisher",
          txt: "Publishers",
          count: '85'
        })}}
        {{ component("pill", {
          id: "journal",
          txt: "Journals",
