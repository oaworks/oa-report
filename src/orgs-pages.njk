---
layout: layouts/base.njk
pagination:
    data: orgs.hits.hits
    size: 1
    alias: org
permalink: "{{ org._source.objectID | slug }}/"
---

{%- from "system/component.njk" import component -%}

<main class="bg-carnation-100">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-2 gap-6 md:gap-12 py-3 xl:pb-6 xl:pt-12">
      <header class="mb-3 col-span-2 md:col-span-2">
        <h1 class="flex items-center">
          <div>
            <span class="font-semibold uppercase text-sm md:text-base line-thru">
              <span class="bg-carnation-100 pr-3">
                {% if org._source.policy.has_policy === true %}Put OA policy into practice at {% else %}Advance OA at {% endif %}
              </span>
            </span>
            <span class="text-2xl md:text-4xl font-light highlight">{{ org._source.name }}</span>
          </div>
          <span class="ml-6 lg:h-14 lg:w-14 rounded-full bg-carnation-500"></span>
        </h1>

        <h2 class="sr-only" id="report-range">
          Since the start of 2023
        </h2>
      </header>

      {# <section class="col-span-2 md:col-span-1 md:text-right">
        {% include 'partials/email-download-form.njk' %}
      </section> #}
    </div>
  </div>

  <nav class="container mx-auto px-6">
    <h2 class="sr-only">See the report by year</h2>
    <ul>
      <li class="mr-2 inline-block">
        {{ component("pill", {
          id: "start-year",
          txt: "",
          selected: true
        }) }}
      </li>
      {% if org._source.paid == true %}
      <li class="mr-2 inline-block">
        {{ component("pill", {
          id: "last-year",
          txt: ""
        }) }}
      </li>
      <li class="mr-2 inline-block">
        {{ component("pill", {
          id: "two-years-ago",
          txt: ""
        }) }}
      </li>
      <li class="inline-block">
        {{ component("pill", {
          id: "all-time",
          txt: "All time"
        }) }}
      </li>
      {% else %}
      <li class="mr-2 inline-block">
        <span class="inline-flex items-center px-4 py-2 md:px-6 md:py-4 border-t-4 text-base md:text-lg bg-white text-neutral-900 opacity-50">
          2022
        </span>
      </li>
      <li class="mr-2 inline-block">
        <span class="inline-flex items-center px-4 py-2 md:px-6 md:py-4 border-t-4 text-base md:text-lg bg-white text-neutral-900 opacity-50">
          2021
        </span>
      </li>
      <li class="mr-2 inline-block">
        <span class="inline-flex items-center px-4 py-2 md:px-6 md:py-4 border-t-4 text-base md:text-lg bg-white text-neutral-900 opacity-50">
          All time
        </span>
      </li>
      <li class="inline-block">
        {{ component("tooltip", {
          msg: "<strong>Access previous years’ reports</strong><br> Upgrade to a <a href='https://about.oa.report/about/pricing#premium' target='_blank' class='underline underline-offset-2 decoration-1'>premium OA.Report</a> to understand your trends. Start now by <a href='#about-free-logged-out' class='underline underline-offset-2 decoration-1'>signing up</a>."}) 
        }}
      </li>
      {% endif %}
    </ul>
  </nav>

  <section class="bg-neutral-900 text-white" id="insights">
    <div class="mx-auto px-6 py-6 xl:py-12">
      <header class="col-span-3">
        <h2 class="mb-3 text-base md:text-lg leading-6">
          <span class="font-semibold uppercase text-sm md:text-base line-thru">
            <span class="bg-neutral-900">
              Insights on <strong class="font-bold">articles</strong>
              {{ component("tooltip", {
                msg: "The <em>Insights</em> section provides a quick overview of your organization’s Open Access statistics. Our data sources are listed on our <a href='https://oa.works/developers/infrastructure/' target='_blank' class='underline underline-offset-2 decoration-1'>infrastructure page</a>."
              }) }}
            </span>
          </span>
        </h2>
      </header>

      <div class="col-span-3 gap-6 grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 mb-8">
        {{ component("card", {
          id: "is_paper",
          title: "Total published",
          icon: "file-text",
          sheets_link: "https://docs.google.com/spreadsheets/d/1xkNIOFn4T6U9TeSEo-brn1lllVima6G5B7rg0FCYNRU/edit#gid=716370963&range=C4"
        }) }}

        {{ component("card", {
          id: "is_free_to_read",
          title: "Free-to-read",
          icon: "gift",
          sheets_link: "https://docs.google.com/spreadsheets/d/1xkNIOFn4T6U9TeSEo-brn1lllVima6G5B7rg0FCYNRU/edit#gid=53136155&range=C5"
        }) }}

        {{ component("card", {
          id: "is_compliant",
          title: "OA policy-compliant",
          icon: "check-circle",
          sheets_link: "https://docs.google.com/spreadsheets/d/1xkNIOFn4T6U9TeSEo-brn1lllVima6G5B7rg0FCYNRU/edit#gid=1811360898&range=C4"
        }) }}

        {{ component("card", {
          id: "is_oa",
          title: "Open Access",
          icon: "unlock",
          sheets_link: "https://docs.google.com/spreadsheets/d/1xkNIOFn4T6U9TeSEo-brn1lllVima6G5B7rg0FCYNRU/edit#gid=53136155&range=C7"
        }) }}

        {{ component("card", {
          id: "has_data_availability_statement",
          title: "With data availability statements",
          icon: "search",
          sheets_link: "https://docs.google.com/spreadsheets/d/1xkNIOFn4T6U9TeSEo-brn1lllVima6G5B7rg0FCYNRU/edit#gid=1681664682&range=C5"
        }) }}

        {{ component("card", {
          id: "has_open_data",
          title: "With Open Data",
          icon: "database"
        }) }}

        {{ component("card", {
          id: "has_open_code",
          title: "With Open Code",
          icon: "code"
        }) }}


    </div>

    {% if org._source.paid == true %}
    <div id="additional-exports">
      <header class="col-span-3">
          <h2 class="mb-3 text-base md:text-lg leading-6">
            <span class="font-semibold uppercase text-sm md:text-base line-thru">
              <span class="bg-neutral-900">
                CSV data exports
                {{ component("tooltip", {
                  msg: "Lorem ipsum dolor sit amet."
                }) }}
              </span>
            </span>
          </h2>
        </header>
      <div class="flex">
        <label for="additional-export-select" class="block text-sm font-medium text-neutral-900 sr-only">Select an export type</label>
        <select id="additional-export-select" class="block p-3 sm:text-sm border-r text-neutral-900 bg-white focus:outline-none focus:ring-1 focus:ring-carnation-300 focus:border-carnation-500 duration-500 whitespace-nowrap">
          <option disabled selected value="">Select an export type</option>
          <option value="custom_export" data-title-selector="#modal_title_custom_export" data-content-selector="#modal_content_custom_export">Create your own</option>
        </select>
        
        <button id="open_modal_btn" class="px-4 py-2 text-sm font-medium text-neutral-900 bg-white hover:bg-carnation-500 hover:text-neutral-900 hover:border-carnation-500 focus:outline-none focus:ring-1 focus:ring-carnation-300 focus:border-carnation-500 duration-500 border-0 whitespace-nowrap">
          Preview export
        </button>
      </div>

      {{ component("modal", {
        id: "all_articles",
        title: "All articles",
        export: true
      }) }}

      {{ component("modal", {
        id: "bmgf_finance",
        title: "Finance",
        export: true
      }) }}

      {{ component("modal", {
        id: "invoice_without_doi",
        title: "Invoices without DOIs",
        export: true
      }) }}

      {{ component("modal", {
        id: "custom_export",
        title: "Create your own"
      }) }}

