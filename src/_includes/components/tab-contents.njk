{# Tab contents component: use with tab-item
{{ component("tab-contents", {
  id: "",
  heading: "",
  desc: "",
  count_id: "",
  table_id: "",
  table_headings: "",
  draft_btn: false,
  download_btn: false,
  hidden: true
}) }}
#}

<section class="grid grid-cols-12 gap-3 lg:gap-6 md:gap-12 js-tab-content {% if params.hidden %} hidden{% else %}{% endif %}" role="tabpanel" tabindex="0" aria-labelledby="tab-{{ params.id }}" id="{{ params.id }}"{% if params.hidden %} hidden{% else %}{% endif %}>
  <header class="md:mb-12 col-span-12 lg:col-span-4">
    <div class=" lg:sticky lg:top-3">
      <h3 class="font-semibold text-xl md:text-4xl mb-3 md:mb-6">{{ params.heading }}</h3>
      <p class="text-xs md:text-base mb-3 md:mb-6">{{ params.desc|safe }}</p>
      {% if params.download_btn %}{% include 'partials/unanswered-download-form.njk' %}{% endif %}
    </div>
  </header>
  <div class="col-span-12 lg:col-span-8 border-t pt-3 sm:pt-0 sm:border-0">
    <div class="grid grid-cols-12 gap-3 lg:gap-6 flex justify-between">
      <div class="mb-3 col-span-12 md:col-span-6">
        <p class="mb-1 text-neutral-900 text-lg font-semibold leading-6">
          <span id="{{ params.count_id }}">00</span> actions shown</span>
          {{ component("tooltip", {
            msg: "<p class='mb-2'>We tried to remove common errors and articles that are already in a repository (either embargoed or available). This list was produced using Unpaywall, Crossref, and ShareYourPaper Permissions data.</p>"
          }) }}
        </p>
      </div>
    </div>
    <div class="mb-8 overflow-hidden sm:-mx-6 md:mx-0 md:rounded-lg drop-shadow-lg">
      <table class="divide-y divide-neutral-300 table-fixed w-full">
        <thead class="bg-neutral-800 text-white">
          <tr>
            {{ params.table_headings|safe }}
            {% if params.draft_btn %}<th scope='col' class='text-sm font-semibold py-3.5 pl-3 pr-4 w-2/12'>Open draft {{ component('tooltip', {    msg: 'This will open a preset message in your email client. If you make any changes to the email, it will not be saved here.'  }) }}</th>{% endif %}
          </tr>
        </thead>
        <tbody class="divide-y divide-neutral-200 bg-white" id="{{ params.table_id }}"></tbody>
      </table>
    </div>
  </div>
</section>
