{# Tooltip component
{{ component("tooltip", {
  msg: "",
  id: ""
}) }}
#}

<sup class="tooltip" tabindex="0" data-tippy-content="{{ params.msg }}"{% if params.id %} id="{{ params.id }}"{% endif %}>
  {% if params.text %}
    <span class="py-0.5 px-1 font-semibold uppercase text-xs border">{{ params.text }}</span>
  {% else %}
    {% icon_small "help-circle" %}
  {% endif %}
</sup>
