{# Card component (to be used for a single piece of data)
{{ component("card", {
  id: "",
  title: "",
  icon: ""
}) }}
#}

<article 
  id="{{ params.id }}"
  class="
    p-2.5 md:p-3 rounded-md bg-white shadow-sm hover:shadow-md 
    transition-shadow duration-200 
    proportional-card flex flex-col h-full
  "
  aria-expanded="false"
  aria-labelledby="{{ params.id }}"
  title="More information on this metric"
>
  {# Header: name of Insight and icon #}
  <header class="flex items-start justify-between text-neutral-700 min-h-[44px]">
    <h3 class="text-sm font-medium">
      {{ params.title }}
    </h3>
    {% icon_small params.icon %}
  </header>

  {# Body: raw number and percentage #}
  <div class="flex-grow flex flex-col justify-start text-neutral-900">
    <p class="mt-2 text-2xl font-bold">
      <span id="percent_{{ params.id }}">
        00%
      </span>
    </p>
    <p class="mt-2 text-xs leading-snug font-semibold text-neutral-600">
      <span id="articles_{{ params.id }}">
        articles
      </span>
    </p>
  </div>

  {# Footer: data visualisation #}
  <footer class="mt-3 h-3 bg-carnation-800 rounded-full js_bar_chart w-full" aria-hidden="true"></footer>
</article>
