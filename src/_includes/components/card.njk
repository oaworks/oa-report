{# Card component (to be used for a single piece of data)
{{ component("card", {
  id: "",
  title: "",
  icon: "",
  raw_number: false
}) }}
#}

<article class="flex relative bg-white transition ease-in delay-150 opacity-0 overflow-hidden" id="{{ params.id }}">
  <div class="p-3 md:p-4 bg-carnation-100 text-neutral-700">
    {% icon params.icon %}
  </div>
  <div class="p-3 md:p-4 grow">
    <header>
      <h3 class="mb-2 text-sm md:text-base text-neutral-900">
        {{ params.title }}
        <sup id="info_{{ params.id }}" aria-hidden="true">{% icon_small "help-circle" %}</sup>
      </h3>
    </header>
    <div class="items-baseline">
      <p class="text-5xl font-black text-neutral-900">
        <span id="percent_{{ params.id }}">00%</span>
      </p>
      {% if not params.raw_number %}
      <p class="mt-2 text-xs md:text-sm font-medium text-neutral-600">
        <span id="articles_{{ params.id }}">000</span>
      </p>
      {% endif %}
      {% if params.sheets_link %}
      <p class="mt-6 text-xs md:text-sm text-right text-neutral-600">
        <a href="{{ params.sheets_link }}"
           target="_blank"
           rel="noopener"
        >
          <span class="underline underline-offset-2 decoration-1">More details</span> <sup>{% icon_small "external-link" %}</sup>
        </a>
      </p>
      {% endif %}
    </div>
  </div>
</article>
