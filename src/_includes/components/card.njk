{# Card component (to be used for a single piece of data)
{{ component("card", {
  id: "",
  title: "",
  icon: ""
}) }}
#}
<article
  id="{{ params.id }}"
  class="
    p-4 bg-white shadow-sm hover:shadow-md 
    transition-shadow duration-200 
    proportional-card flex flex-col
  "
  aria-expanded="false"
  aria-labelledby="{{ params.id }}"
  title="More information on this metric"
>
  {# Header: name of Insight and icon #}
  <header class="flex items-start justify-between min-h-[50px] text-neutral-700">
    <h3 class="text-sm font-medium">
      {{ params.title }}
    </h3>
    {% icon_small params.icon %}
  </header>

  {# Body: raw number and percentage #}
  <div class="flex-grow flex flex-col justify-start text-neutral-900">
    <p class="mt-6 text-2xl font-bold">
      <span id="percent_{{ params.id }}">
        00%
      </span>
    </p>
    <p class="mt-2 text-xs font-semibold text-neutral-600">
      <span id="articles_{{ params.id }}">
        articles
      </span>
    </p>
  </div>

  {# Footer: data visualisation #}
  <footer class="mt-4 h-3 bg-carnation-800 rounded-full bar-chart w-full"></footer>
</article>
