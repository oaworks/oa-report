<header class="flex justify-between bg-white border-b border-neutral-300 px-4 sm:px-6 md:px-8 pt-6">
  <h2 class="text-2xl md:text-3xl lg:text-6xl -mb-2.5 md:-mb-3 font-black">
    <a href="/">
      {% include 'partials/app-name.njk' %}
    </a>
  </h2>
  {# TODO: create static pages + implement search tool #}
  <nav>
    <ul class="flex self-center">
      {% for item in nav_header %}
      <li class="ml-6"{% if item.id %} id="{{ item.id }}"{% endif %}>
        <a href="{{ item.url }}" class="text-sm font-medium md:text-base uppercase hover:text-carnation-500 transition duration-300">{{ item.label }}</a>
      </li>
      {% endfor %}
      {% if page.url != "/" %}
      <li class="ml-6">
        <label for="js-search-box" class="sr-only">Search</label>
        <div class="flex rounded-sm shadow-sm">
          <div class="relative flex items-stretch flex-grow focus-within:z-10">
            <div class="absolute inset-y-0 left-0 pl-2 flex items-center pointer-events-none">
              {% icon_small "search" %}
            </div>
            <input type="text" name="js-search-box" id="js-search-box" class="focus:ring-carnation-500 focus:border-carnation-500 block w-full rounded-md pl-10 sm:text-sm shadow-md border-0 bg-[#F4F0F0]" placeholder="Find an organization by name, acronym, or ROR&hellip;" role="combobox" aria-controls="options" aria-expanded="false">
          </div>
        </div>
        <ul id="js-suggestions-list" class="absolute z-10 mt-1 max-h-60 w-auto overflow-auto rounded-md bg-white text-base shadow-lg ring-1 ring-carnation-500 ring-opacity-5 focus:outline-none sm:text-sm" style="display: none" role="listbox"></ul>
      </li>
      {% endif %}
    </ul>
  </nav>
</header>
