<header class="flex justify-between bg-white border-b border-neutral-300 px-4 sm:px-6 md:px-8 pt-6">
  <h2 class="text-2xl md:text-3xl lg:text-6xl -mb-2.5 md:-mb-3 font-black">
    <a href="/">
      {% include 'partials/app-name.njk' %}
    </a>
  </h2>
  <nav>
    <ul class="flex align-middle">
      {% for item in nav_header %}
      <li>
        <a href="{{ item.url }}" class="text-sm md:text-base hover:text-carnation-500 transition duration-300">{{ item.label }}</a>
      </li>
      {% endfor %}
      {% if page.url != "/" %}
      <li>
        <div id="search"></div>
      </li>
      {% endif %}
    </ul>
  </nav>
</header>
