{# Shared wrapper for report sections #}
{% macro sectionWrapper(id, title, tooltip=null, section_class="bg-neutral-900 text-white js_section", inner_class="p-3 md:px-6 md:py-8", container_class="max-w-8xl mx-auto", header_class="pb-4 text-2xl md:text-3xl font-normal leading-8 text-white") %}
  <div id="{{ id }}" class="h-20 md:h-24 -mt-20 md:-mt-24" aria-hidden="true"></div>
  <section class="{{ section_class }}">
    <div class="{{ inner_class }}">
      <div class="{{ container_class }}">
        <header>
          <h2 class="{{ header_class }}">
            <span class="inline-flex items-center gap-2">
              <span>{{ title }}</span>
              {% if tooltip %}{{ tooltip | safe }}{% endif %}
            </span>
          </h2>
        </header>
        <div class="mt-2 md:mt-4">
          {{ caller() }}
        </div>
      </div>
    </div>
  </section>
{% endmacro %}
