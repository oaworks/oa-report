---
layout: layouts/base.njk
---

{%- from "system/component.njk" import component -%}

<main class="bg-carnation-100">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-3 gap-6 md:gap-12 py-3 xl:pb-6 xl:pt-12">
      <header class="mb-3 col-span-3 md:col-span-1">
        <h1 class="text-2xl md:text-4xl font-light">
          {{ title }}
        </h1>
      </header>
      <nav class="col-span-3 md:col-span-1 bg-gray-200 p-4">
        <ul>
          {% for doc in collections.docs | sort('filePathStem') %}
            {% set parts = doc.filePathStem.split('/') %}
            {% if parts.length > 3 %}
              {% set indentation = parts.length - 3 %}
              <li style="padding-left: {{ indentation * 1.5 }}em;">
                <a href="{{ doc.url }}">{{ doc.data.title }}</a>
              </li>
            {% else %}
              <li>
                <a href="{{ doc.url }}">{{ doc.data.title }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </nav>
      <div class="col-span-3 md:col-span-2">
        {{ content | safe }}
      </div>
    </div>
  </div>
</main>
